<%= form_with(model: contact_submission) do |form| %>
  <% if contact_submission.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact_submission.errors.count, "error") %> prohibited this contact form from being sent:</h2>

      <ul>
        <% contact_submission.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :subject, style: "display: block" %>
    <%= form.text_field :subject %>
  </div>

  <div>
    <%= form.label :message, style: "display: block" %>
    <%= form.textarea :message %>
  </div>

  <div>
    <%= form.submit "Send", class: "button" %>
  </div>
<% end %>
